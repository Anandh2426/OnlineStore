@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row g-3" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Title" class="form-label p-0"></label>
                            <input asp-for="Product.Title" type="text" class="form-control" placeholder="Enter Title" />
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Description" class="form-label p-0"></label>
                            <input asp-for="Product.Description" type="text" class="form-control" placeholder="Enter Description" />
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row p-4">
                            <label asp-for="Product.ISBN" class="form-label p-0"></label>
                            <input asp-for="Product.ISBN" type="text" class="form-control" placeholder="Enter ISBN No" />
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Author" class="form-label p-0"></label>
                            <input asp-for="Product.Author" type="text" class="form-control" placeholder="Enter Author Name" />
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.ListPrice" class="form-label p-0"></label>
                            <input asp-for="Product.ListPrice" type="number" class="form-control" placeholder="Enter ListPrice" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Price" class="form-label p-0"></label>
                            <input asp-for="Product.Price" type="number" class="form-control" placeholder="Enter display order" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Price50" class="form-label p-0"></label>
                            <input asp-for="Product.Price50" type="number" class="form-control" placeholder="Enter Price50" />
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.Price100" class="form-label p-0"></label>
                            <input asp-for="Product.Price100" type="number" class="form-control" placeholder="Enter Price100" />
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.CategoryId" type="number" class="form-label p-0"></label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 ">
                                <option disabled selected>--Select Category--</option>
                            </select>

                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.stock_quantity" class="form-label p-0"></label>
                            <input asp-for="Product.stock_quantity" type="number" class="form-control" placeholder="Enter Stock Quantity" />
                            <span asp-validation-for="Product.stock_quantity" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-4">
                            <label asp-for="Product.ImageUrl" class="form-label p-0"></label>
                            <input type="file" name="file" class="form-control" placeholder="" />
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                            </div>
                        </div>

                    </div>
                </div>
                    <div class="col-2">
                        <img src="@Model.Product.ImageUrl" width="100%"
                             style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
            </div>
            
            
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

